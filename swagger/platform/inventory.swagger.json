          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/runtimeError"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/platformSearchInventoryDeviceRequest"
            }
          }
        ],
        "tags": [
          "InventoryService"
        ]
      }
    },
    "/api/inventory/devices/{device.eui}": {
      "put": {
        "summary": "Update device in inventory.",
        "operationId": "InventoryService_Update",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "properties": {}
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/runtimeError"
            }
          }
        },
        "parameters": [
          {
            "name": "device.eui",
            "description": "EUI (EUI64) - Primary identifier.",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/platformUpdateInventoryDeviceRequest"
            }
          }
        ],
        "tags": [
          "InventoryService"
        ]
      }
    },
