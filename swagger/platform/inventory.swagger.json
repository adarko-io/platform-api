{
  "swagger": "2.0",
  "info": {
    "title": "platform/inventory.proto",
    "version": "version not set"
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/api/inventory/devices": {
      "get": {
        "summary": "List devices in inventory with filtering.",
        "operationId": "InventoryService_List",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/platformListInventoryDevicesResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/runtimeError"
            }
          }
        },
        "parameters": [
          {
            "name": "limit",
            "description": "Maximum number of devices to return.",
            "in": "query",
            "required": false,
            "type": "integer",
            "format": "int64"
          },
          {
            "name": "offset",
            "description": "Offset for pagination.",
            "in": "query",
            "required": false,
            "type": "integer",
            "format": "int64"
          },
          {
            "name": "search",
            "description": "Search query (Name, EUI, Serial Number, etc.).",
            "in": "query",
            "required": false,
            "type": "string"
          },
          {
            "name": "deviceProfileId",
            "description": "DeviceProfile ID.",
            "in": "query",
            "required": false,
            "type": "array",
            "items": {
              "type": "string"
            },
            "collectionFormat": "multi"
          }
        ],
        "tags": [
          "InventoryService"
        ]
      },
      "post": {
        "summary": "Create a new device in inventory.",
        "operationId": "InventoryService_Create",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/platformCreateInventoryDeviceResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/runtimeError"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/platformCreateInventoryDeviceRequest"
            }
          }
        ],
        "tags": [
          "InventoryService"
        ]
      }
    },
    "/api/inventory/devices/bulk-import": {
      "post": {
        "summary": "Bulk import devices to inventory.",
        "operationId": "InventoryService_BulkImport",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/platformBulkImportResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/runtimeError"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/platformBulkImportRequest"
            }
          }
        ],
        "tags": [
          "InventoryService"
        ]
      }
    },
    "/api/inventory/devices/{id}": {
      "get": {
        "summary": "Get device from inventory by EUI.",
        "operationId": "InventoryService_Get",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/platformGetInventoryDeviceResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/runtimeError"
            }
          }
        },
        "parameters": [
          {
            "name": "id",
            "description": "Inventory ID.",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "InventoryService"
        ]
      },
      "delete": {
        "summary": "Delete device from inventory.",
        "operationId": "InventoryService_Delete",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "properties": {}
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/runtimeError"
            }
          }
        },
        "parameters": [
          {
            "name": "id",
            "description": "Inventory ID.",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "InventoryService"
        ]
      }
    },
    "/api/inventory/devices/{id}/status": {
      "put": {
        "summary": "Update device status (onboarded/provisioned).",
        "operationId": "InventoryService_UpdateStatus",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "properties": {}
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/runtimeError"
            }
          }
        },
        "parameters": [
          {
            "name": "id",
            "description": "Inventory ID.",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/platformUpdateDeviceStatusRequest"
            }
          }
        ],
        "tags": [
          "InventoryService"
        ]
      }
    },
    "/api/inventory/devices/{inventory.id}": {
      "put": {
        "summary": "Update device in inventory.",
        "operationId": "InventoryService_Update",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "properties": {}
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/runtimeError"
            }
          }
        },
        "parameters": [
          {
            "name": "inventory.id",
            "description": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/platformUpdateInventoryDeviceRequest"
            }
          }
        ],
        "tags": [
          "InventoryService"
        ]
      }
    }
  },
  "definitions": {
    "platformBulkImportRequest": {
      "type": "object",
      "properties": {
        "devices": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/platformInventoryDevice"
          },
          "description": "Devices to import."
        },
        "skipExisting": {
          "type": "boolean",
          "description": "Skip devices that already exist."
        }
      }
    },
    "platformBulkImportResponse": {
      "type": "object",
      "properties": {
        "importedCount": {
          "type": "integer",
          "format": "int64",
          "description": "Number of devices successfully imported."
        },
        "skippedCount": {
          "type": "integer",
          "format": "int64",
          "description": "Number of devices skipped."
        },
        "failedCount": {
          "type": "integer",
          "format": "int64",
          "description": "Number of devices failed."
        },
        "errors": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/platformImportError"
          },
          "description": "Import errors."
        }
      }
    },
    "platformCreateInventoryDeviceRequest": {
      "type": "object",
      "properties": {
        "inventory": {
          "$ref": "#/definitions/platformInventoryDevice",
          "description": "Device to create."
        }
      },
      "description": "Request/Response messages."
    },
    "platformCreateInventoryDeviceResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Inventory ID."
        }
      }
    },
    "platformGetInventoryDeviceResponse": {
      "type": "object",
      "properties": {
        "inventory": {
          "$ref": "#/definitions/platformInventoryDevice",
          "description": "Device information."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Created at timestamp."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Last update timestamp."
        }
      }
    },
    "platformImportError": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Inventory ID that failed."
        },
        "error": {
          "type": "string",
          "description": "Error message."
        }
      }
    },
    "platformInventoryDevice": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "title": "id"
        },
        "eui": {
          "type": "string",
          "description": "EUI (EUI64) - Primary identifier."
        },
        "serialNumber": {
          "type": "string",
          "description": "Serial number."
        },
        "name": {
          "type": "string",
          "description": "Device name/model."
        },
        "description": {
          "type": "string",
          "description": "Device description."
        },
        "status": {
          "$ref": "#/definitions/platformInventoryStatus",
          "description": "Current inventory status."
        },
        "deviceProfileId": {
          "type": "string",
          "description": "DeviceProfile ID."
        },
        "configuration": {
          "type": "object",
          "description": "Device type specific configuration JSON."
        },
        "tags": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Device tags/labels."
        },
        "metadata": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Additional metadata."
        },
        "batchId": {
          "type": "string",
          "description": "Batch/lot information."
        }
      },
      "description": "InventoryDevice represents a device in the inventory with all necessary configuration."
    },
    "platformInventoryDeviceListItem": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "title": "Inventory ID"
        },
        "eui": {
          "type": "string",
          "description": "Device EUI."
        },
        "name": {
          "type": "string",
          "description": "Device name."
        },
        "serialNumber": {
          "type": "string",
          "description": "Serial number."
        },
        "status": {
          "$ref": "#/definitions/platformInventoryStatus",
          "description": "Current status."
        },
        "deviceProfileId": {
          "type": "string",
          "description": "Device profile ID."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Created at timestamp."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Last update timestamp."
        }
      }
    },
    "platformInventoryStatus": {
      "type": "string",
      "enum": [
        "INVENTORY_STATUS_INVENTORY",
        "INVENTORY_STATUS_ONBOARDED",
        "INVENTORY_STATUS_PROVISIONED",
        "INVENTORY_STATUS_DECOMMISSIONED",
        "INVENTORY_STATUS_FAULTY",
        "INVENTORY_STATUS_LOST"
      ],
      "default": "INVENTORY_STATUS_INVENTORY",
      "description": "Inventory status enumeration.\n\n - INVENTORY_STATUS_INVENTORY: Device in inventory, not yet onboarded.\n - INVENTORY_STATUS_ONBOARDED: Device onboarded to platform.\n - INVENTORY_STATUS_PROVISIONED: Device provisioned and active.\n - INVENTORY_STATUS_DECOMMISSIONED: Device decommissioned.\n - INVENTORY_STATUS_FAULTY: Device reported as faulty.\n - INVENTORY_STATUS_LOST: Device lost or stolen."
    },
    "platformListInventoryDevicesResponse": {
      "type": "object",
      "properties": {
        "totalCount": {
          "type": "integer",
          "format": "int64",
          "description": "Total count."
        },
        "devices": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/platformInventoryDeviceListItem"
          },
          "description": "Device list."
        }
      }
    },
    "platformUpdateDeviceStatusRequest": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Inventory ID."
        },
        "status": {
          "$ref": "#/definitions/platformInventoryStatus",
          "description": "New status."
        },
        "notes": {
          "type": "string",
          "description": "Status update reason/notes."
        }
      }
    },
    "platformUpdateInventoryDeviceRequest": {
      "type": "object",
      "properties": {
        "inventory": {
          "$ref": "#/definitions/platformInventoryDevice",
          "description": "Device to update."
        }
      }
    },
    "protobufAny": {
      "type": "object",
      "properties": {
        "typeUrl": {
          "type": "string"
        },
        "value": {
          "type": "string",
          "format": "byte"
        }
      }
    },
    "protobufNullValue": {
      "type": "string",
      "enum": [
        "NULL_VALUE"
      ],
      "default": "NULL_VALUE",
      "description": "`NullValue` is a singleton enumeration to represent the null value for the\n`Value` type union.\n\nThe JSON representation for `NullValue` is JSON `null`.\n\n - NULL_VALUE: Null value."
    },
    "runtimeError": {
      "type": "object",
      "properties": {
        "error": {
          "type": "string"
        },
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    }
  }
}
