  "paths": {
    "/api/inventory/devices": {
      "get": {
        "summary": "List devices in inventory with filtering.",
        "operationId": "InventoryService_List",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/platformListInventoryDevicesResponse"
