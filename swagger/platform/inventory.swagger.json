  "definitions": {
    "platformAssetSubType": {
      "type": "string",
      "enum": [
        "ASSET_SUB_TYPE_UNKNOWN",
        "ASSET_SUB_TYPE_WATER_METER_INDUCTIVE",
        "ASSET_SUB_TYPE_WATER_METER_MAGNETIC",
        "ASSET_SUB_TYPE_WATER_METER_ULTRASONIC",
        "ASSET_SUB_TYPE_WATER_METER_PULSE",
        "ASSET_SUB_TYPE_ENERGY_METER_SINGLE_PHASE",
        "ASSET_SUB_TYPE_ENERGY_METER_THREE_PHASE",
        "ASSET_SUB_TYPE_GAS_METER",
        "ASSET_SUB_TYPE_GPS_TRACKER",
        "ASSET_SUB_TYPE_LORAWAN_GATEWAY"
      ],
      "default": "ASSET_SUB_TYPE_UNKNOWN",
      "description": " - ASSET_SUB_TYPE_UNKNOWN: Unknown asset type."
    },
    "platformAssetType": {
      "type": "string",
      "enum": [
        "ASSET_TYPE_UNKNOWN",
        "ASSET_TYPE_WATER_METER",
        "ASSET_TYPE_ENERGY_METER",
        "ASSET_TYPE_GAS_METER",
        "ASSET_TYPE_GPS_TRACKER",
        "ASSET_TYPE_GATEWAY"
      ],
      "default": "ASSET_TYPE_UNKNOWN",
      "description": " - ASSET_TYPE_UNKNOWN: Unknown asset type.\n - ASSET_TYPE_WATER_METER: AMR Water meter Inductive.\n - ASSET_TYPE_ENERGY_METER: Energy Meter device.\n - ASSET_TYPE_GAS_METER: GAS Meter device.\n - ASSET_TYPE_GPS_TRACKER: GPS Tracker device.\n - ASSET_TYPE_GATEWAY: Gateway device."
    },
    "platformBulkImportRequest": {
      "type": "object",
      "properties": {
        "devices": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/platformInventoryDevice"
          },
          "description": "Devices to import."
        },
        "skipExisting": {
          "type": "boolean",
          "description": "Skip devices that already exist."
        }
      }
    },
    "platformBulkImportResponse": {
      "type": "object",
      "properties": {
        "importedCount": {
          "type": "integer",
          "format": "int64",
          "description": "Number of devices successfully imported."
        },
        "skippedCount": {
          "type": "integer",
          "format": "int64",
          "description": "Number of devices skipped."
        },
        "failedCount": {
          "type": "integer",
          "format": "int64",
          "description": "Number of devices failed."
        },
        "errors": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/platformImportError"
          },
          "description": "Import errors."
        }
      }
    },
    "platformCreateInventoryDeviceRequest": {
      "type": "object",
      "properties": {
        "device": {
          "$ref": "#/definitions/platformInventoryDevice",
          "description": "Device to create."
        }
      },
      "description": "Request/Response messages."
    },
    "platformCreateInventoryDeviceResponse": {
      "type": "object",
      "properties": {
        "eui": {
          "type": "string",
          "description": "Device EUI."
        }
      }
    },
    "platformDeviceType": {
      "type": "string",
      "enum": [
        "DEVICE_TYPE_UNKNOWN",
        "DEVICE_TYPE_LORAWAN",
        "DEVICE_TYPE_CELLULAR_GSM",
        "DEVICE_TYPE_CELLULAR_LTE",
        "DEVICE_TYPE_CELLULAR_GSM_LTE",
        "DEVICE_TYPE_GATEWAY",
        "DEVICE_TYPE_LORAWAN_GATEWAY"
      ],
      "default": "DEVICE_TYPE_UNKNOWN",
      "description": "Communication mode enumeration - unified for inventory and other services.\n\n - DEVICE_TYPE_UNKNOWN: Unknown device type.\n - DEVICE_TYPE_LORAWAN: LoRaWAN device type.\n - DEVICE_TYPE_CELLULAR_GSM: Cellular MQTT device type.\n - DEVICE_TYPE_CELLULAR_LTE: Cellular TCP device type.\n - DEVICE_TYPE_CELLULAR_GSM_LTE: Cellular UDP device type.\n - DEVICE_TYPE_GATEWAY: Gateway device type.\n - DEVICE_TYPE_LORAWAN_GATEWAY: LoRaWAN Gateway device type."
    },
    "platformGetInventoryDeviceResponse": {
      "type": "object",
      "properties": {
        "device": {
          "$ref": "#/definitions/platformInventoryDevice",
          "description": "Device information."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Created at timestamp."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Last update timestamp."
        }
      }
    },
    "platformImportError": {
      "type": "object",
      "properties": {
        "eui": {
          "type": "string",
          "description": "Device EUI that failed."
        },
        "error": {
          "type": "string",
          "description": "Error message."
        }
      }
    },
    "platformInventoryDevice": {
      "type": "object",
      "properties": {
        "eui": {
          "type": "string",
          "description": "EUI (EUI64) - Primary identifier."
        },
        "serialNumber": {
          "type": "string",
          "description": "Serial number."
        },
        "name": {
          "type": "string",
          "description": "Device name/model."
        },
        "description": {
          "type": "string",
          "description": "Device description."
        },
        "status": {
          "$ref": "#/definitions/platformInventoryStatus",
          "description": "Current inventory status."
        },
        "manufacturer": {
          "type": "string",
          "description": "Manufacturer information."
        },
        "model": {
          "type": "string",
          "description": "Model number/SKU."
        },
        "hardwareVersion": {
          "type": "string",
          "description": "Hardware version."
        },
        "firmwareVersion": {
          "type": "string",
          "description": "Firmware version."
        },
        "configuration": {
          "type": "object",
          "description": "Device type specific configuration JSON."
        },
        "deviceType": {
          "$ref": "#/definitions/platformDeviceType",
          "description": "Device Type LoRaWAN Gateway, LoRaWAN Device, Cellular Device, Wifi etc."
        },
        "assetType": {
          "$ref": "#/definitions/platformAssetType",
          "description": "Asset Type Water Meter, Gas Meter, Energy Meter etc."
        },
        "assetSubType": {
          "$ref": "#/definitions/platformAssetSubType"
        },
        "tags": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Device tags/labels."
        },
        "metadata": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Additional metadata."
        },
        "batchId": {
          "type": "string",
          "description": "Batch/lot information."
        }
      },
      "description": "InventoryDevice represents a device in the inventory with all necessary configuration."
    },
    "platformInventoryDeviceListItem": {
      "type": "object",
      "properties": {
        "eui": {
          "type": "string",
          "description": "Device EUI."
        },
        "name": {
          "type": "string",
          "description": "Device name."
        },
        "status": {
          "$ref": "#/definitions/platformInventoryStatus",
          "description": "Current status."
        },
        "manufacturer": {
          "type": "string",
          "description": "Manufacturer."
        },
        "model": {
          "type": "string",
          "description": "Model."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Created at timestamp."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Last update timestamp."
        }
      }
    },
    "platformInventoryStatus": {
      "type": "string",
      "enum": [
        "INVENTORY_STATUS_INVENTORY",
        "INVENTORY_STATUS_ONBOARDED",
        "INVENTORY_STATUS_PROVISIONED",
        "INVENTORY_STATUS_DECOMMISSIONED",
        "INVENTORY_STATUS_FAULTY",
        "INVENTORY_STATUS_LOST"
      ],
      "default": "INVENTORY_STATUS_INVENTORY",
      "description": "Inventory status enumeration.\n\n - INVENTORY_STATUS_INVENTORY: Device in inventory, not yet onboarded.\n - INVENTORY_STATUS_ONBOARDED: Device onboarded to platform.\n - INVENTORY_STATUS_PROVISIONED: Device provisioned and active.\n - INVENTORY_STATUS_DECOMMISSIONED: Device decommissioned.\n - INVENTORY_STATUS_FAULTY: Device reported as faulty.\n - INVENTORY_STATUS_LOST: Device lost or stolen."
    },
    "platformListInventoryDevicesResponse": {
      "type": "object",
      "properties": {
        "totalCount": {
          "type": "integer",
          "format": "int64",
          "description": "Total count."
        },
        "devices": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/platformInventoryDeviceListItem"
          },
          "description": "Device list."
        }
      }
    },
    "platformSearchInventoryDeviceRequest": {
      "type": "object",
      "properties": {
        "criteria": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Search criteria."
        },
        "limit": {
          "type": "integer",
          "format": "int64",
          "description": "Maximum results."
        }
      }
    },
    "platformSearchInventoryDeviceResponse": {
      "type": "object",
      "properties": {
        "devices": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/platformInventoryDeviceListItem"
          },
          "description": "Found devices."
        }
      }
    },
    "platformUpdateDeviceStatusRequest": {
      "type": "object",
      "properties": {
        "eui": {
          "type": "string",
          "description": "Device EUI."
        },
        "status": {
          "$ref": "#/definitions/platformInventoryStatus",
          "description": "New status."
        },
        "notes": {
          "type": "string",
          "description": "Status update reason/notes."
        }
      }
    },
    "platformUpdateInventoryDeviceRequest": {
      "type": "object",
      "properties": {
        "device": {
          "$ref": "#/definitions/platformInventoryDevice",
          "description": "Device to update."
        }
      }
    },
    "protobufAny": {
      "type": "object",
      "properties": {
        "typeUrl": {
          "type": "string"
        },
        "value": {
          "type": "string",
          "format": "byte"
        }
      }
    },
    "protobufNullValue": {
      "type": "string",
      "enum": [
        "NULL_VALUE"
      ],
      "default": "NULL_VALUE",
      "description": "`NullValue` is a singleton enumeration to represent the null value for the\n`Value` type union.\n\nThe JSON representation for `NullValue` is JSON `null`.\n\n - NULL_VALUE: Null value."
    },
    "runtimeError": {
      "type": "object",
      "properties": {
        "error": {
          "type": "string"
        },
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    }
  }
