  "definitions": {
    "apiAssetType": {
      "type": "string",
      "enum": [
        "ASSET_TYPE_UNKNOWN",
        "ASSET_TYPE_AMR_WATER_METER_INDUCTIVE",
        "ASSET_TYPE_WATER_METER_MAGNETIC",
        "ASSET_TYPE_AMR_WATER_METER_PULSE",
        "ASSET_TYPE_ULTRASONIC_WATER_METER",
        "ASSET_TYPE_ENERGY_METER",
        "ASSET_TYPE_GAS_METER",
        "ASSET_TYPE_GPS_TRACKER",
        "ASSET_TYPE_LORAWAN_GATEWAY"
      ],
      "default": "ASSET_TYPE_UNKNOWN",
      "description": " - ASSET_TYPE_UNKNOWN: Unknown asset type.\n - ASSET_TYPE_AMR_WATER_METER_INDUCTIVE: AMR Water meter Inductive.\n - ASSET_TYPE_WATER_METER_MAGNETIC: AMR Water meter magnetic device.\n - ASSET_TYPE_AMR_WATER_METER_PULSE: AMR Water meter pulse device.\n - ASSET_TYPE_ULTRASONIC_WATER_METER: ULTRASONIC Water Meter device.\n - ASSET_TYPE_ENERGY_METER: Energy Meter device.\n - ASSET_TYPE_GAS_METER: GAS Meter device.\n - ASSET_TYPE_GPS_TRACKER: GPS Tracker device.\n - ASSET_TYPE_LORAWAN_GATEWAY: LoRaWAN Gateway device."
    },
    "apiBulkImportRequest": {
      "type": "object",
      "properties": {
        "devices": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/apiInventoryDevice"
          },
          "description": "Devices to import."
        },
        "skipExisting": {
          "type": "boolean",
          "description": "Skip devices that already exist."
        }
      }
    },
    "apiBulkImportResponse": {
      "type": "object",
      "properties": {
        "importedCount": {
          "type": "integer",
          "format": "int64",
          "description": "Number of devices successfully imported."
        },
        "skippedCount": {
          "type": "integer",
          "format": "int64",
          "description": "Number of devices skipped."
        },
        "failedCount": {
          "type": "integer",
          "format": "int64",
          "description": "Number of devices failed."
        },
        "errors": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/apiImportError"
          },
          "description": "Import errors."
        }
      }
    },
    "apiCreateInventoryDeviceRequest": {
      "type": "object",
      "properties": {
        "device": {
          "$ref": "#/definitions/apiInventoryDevice",
          "description": "Device to create."
        }
      },
      "description": "Request/Response messages."
    },
    "apiCreateInventoryDeviceResponse": {
      "type": "object",
      "properties": {
        "eui": {
          "type": "string",
          "description": "Device EUI."
        }
      }
    },
    "apiDeviceType": {
      "type": "string",
      "enum": [
        "DEVICE_TYPE_UNKNOWN",
        "DEVICE_TYPE_LORAWAN",
        "DEVICE_TYPE_CELLULAR_GSM",
        "DEVICE_TYPE_CELLULAR_LTE",
        "DEVICE_TYPE_CELLULAR_GSM_LTE",
        "DEVICE_TYPE_GATEWAY",
        "DEVICE_TYPE_LORAWAN_GATEWAY"
      ],
      "default": "DEVICE_TYPE_UNKNOWN",
      "description": "Communication mode enumeration - unified for inventory and other services.\n\n - DEVICE_TYPE_UNKNOWN: Unknown device type.\n - DEVICE_TYPE_LORAWAN: LoRaWAN device type.\n - DEVICE_TYPE_CELLULAR_GSM: Cellular MQTT device type.\n - DEVICE_TYPE_CELLULAR_LTE: Cellular TCP device type.\n - DEVICE_TYPE_CELLULAR_GSM_LTE: Cellular UDP device type.\n - DEVICE_TYPE_GATEWAY: Gateway device type.\n - DEVICE_TYPE_LORAWAN_GATEWAY: LoRaWAN Gateway device type."
    },
    "apiGetInventoryDeviceResponse": {
      "type": "object",
      "properties": {
        "device": {
          "$ref": "#/definitions/apiInventoryDevice",
          "description": "Device information."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Created at timestamp."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Last update timestamp."
        }
      }
    },
    "apiImportError": {
      "type": "object",
      "properties": {
        "eui": {
          "type": "string",
          "description": "Device EUI that failed."
        },
        "error": {
          "type": "string",
          "description": "Error message."
        }
      }
    },
    "apiInventoryDevice": {
      "type": "object",
      "properties": {
        "eui": {
          "type": "string",
          "description": "EUI (EUI64) - Primary identifier."
        },
        "serialNumber": {
          "type": "string",
          "description": "Serial number."
        },
        "name": {
          "type": "string",
          "description": "Device name/model."
        },
        "description": {
          "type": "string",
          "description": "Device description."
        },
        "status": {
          "$ref": "#/definitions/apiInventoryStatus",
          "description": "Current inventory status."
        },
        "manufacturer": {
          "type": "string",
          "description": "Manufacturer information."
        },
        "model": {
          "type": "string",
          "description": "Model number/SKU."
        },
        "hardwareVersion": {
          "type": "string",
          "description": "Hardware version."
        },
        "firmwareVersion": {
          "type": "string",
          "description": "Firmware version."
        },
        "configuration": {
          "type": "string",
          "description": "Device type specific configuration JSON."
        },
        "deviceType": {
          "$ref": "#/definitions/apiDeviceType",
          "description": "Device Type LoRaWAN Gateway, LoRaWAN Device, Cellular Device, Wifi etc."
        },
        "assetType": {
          "$ref": "#/definitions/apiAssetType",
          "description": "Asset Type Water Meter, Gas Meter, Energy Meter etc."
        },
        "tags": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Device tags/labels."
        },
        "metadata": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Additional metadata."
        },
        "batchId": {
          "type": "string",
          "description": "Batch/lot information."
        }
      },
      "description": "InventoryDevice represents a device in the inventory with all necessary configuration."
    },
    "apiInventoryDeviceListItem": {
      "type": "object",
      "properties": {
        "eui": {
          "type": "string",
          "description": "Device EUI."
        },
        "name": {
          "type": "string",
          "description": "Device name."
        },
        "status": {
          "$ref": "#/definitions/apiInventoryStatus",
          "description": "Current status."
        },
        "manufacturer": {
          "type": "string",
          "description": "Manufacturer."
        },
        "model": {
          "type": "string",
          "description": "Model."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Created at timestamp."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Last update timestamp."
        }
      }
    },
    "apiInventoryStatus": {
      "type": "string",
      "enum": [
        "INVENTORY_STATUS_INVENTORY",
        "INVENTORY_STATUS_ONBOARDED",
        "INVENTORY_STATUS_PROVISIONED",
        "INVENTORY_STATUS_DECOMMISSIONED",
        "INVENTORY_STATUS_FAULTY",
        "INVENTORY_STATUS_LOST"
      ],
      "default": "INVENTORY_STATUS_INVENTORY",
      "description": "Inventory status enumeration.\n\n - INVENTORY_STATUS_INVENTORY: Device in inventory, not yet onboarded.\n - INVENTORY_STATUS_ONBOARDED: Device onboarded to platform.\n - INVENTORY_STATUS_PROVISIONED: Device provisioned and active.\n - INVENTORY_STATUS_DECOMMISSIONED: Device decommissioned.\n - INVENTORY_STATUS_FAULTY: Device reported as faulty.\n - INVENTORY_STATUS_LOST: Device lost or stolen."
    },
    "apiListInventoryDevicesResponse": {
      "type": "object",
      "properties": {
        "totalCount": {
          "type": "integer",
          "format": "int64",
          "description": "Total count."
        },
        "devices": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/apiInventoryDeviceListItem"
          },
          "description": "Device list."
        }
      }
    },
