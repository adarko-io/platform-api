    "platformAssetSubType": {
      "type": "string",
      "enum": [
        "ASSET_SUB_TYPE_UNKNOWN",
        "ASSET_SUB_TYPE_LORAWAN_GATEWAY_CPI_ODU",
        "ASSET_SUB_TYPE_LORAWAN_GATEWAY_CPI_IDU",
        "ASSET_SUB_TYPE_WATER_METER_AMR_INDUCTIVE_AIL_V1",
        "ASSET_SUB_TYPE_WATER_METER_AMR_INDUCTIVE_CPI_V1",
        "ASSET_SUB_TYPE_WATER_METER_AMR_PULSE_AIL_V1",
        "ASSET_SUB_TYPE_WATER_METER_AMR_MAGNETIC_AIL_V1"
      ],
      "default": "ASSET_SUB_TYPE_UNKNOWN",
      "description": "- ASSET_SUB_TYPE_UNKNOWN: Unknown asset type.\n - ASSET_SUB_TYPE_LORAWAN_GATEWAY_CPI_ODU: Outdoor LoRaWAN Gateway - CPI ODU\n - ASSET_SUB_TYPE_LORAWAN_GATEWAY_CPI_IDU: Indoor LoRaWAN Gateway - CPI IDU\n - ASSET_SUB_TYPE_WATER_METER_AMR_INDUCTIVE_AIL_V1: ADARKO Inductive Water Meter AMR - V1\n - ASSET_SUB_TYPE_WATER_METER_AMR_INDUCTIVE_CPI_V1: CPI Inductive Water Meter AMR - V1\n - ASSET_SUB_TYPE_WATER_METER_AMR_PULSE_AIL_V1: ADARKO Pulse Water Meter AMR - V1\n - ASSET_SUB_TYPE_WATER_METER_AMR_MAGNETIC_AIL_V1: ADARKO Magnetic Water Meter AMR - V1",
      "title": "Asset sub-type enumeration.\nAssetSubType defines specific sub-types for various asset categories. which will help for UI representation, filtering, data decode etc.\nit will be manufacturer and model specific.\nEx : ASSET_SUB_TYPE_WATER_METER_INDUCTIVE_mfr_model = ASSET_SUB_TYPE_WATER_METER_INDUCTIVE_AIL_V1\nDO NOT CHANGE THE EXISTING VALUES, APPEND NEW VALUES AT THE END TO AVOID CONFLICTS"
    },
    "platformAssetType": {
      "type": "string",
      "enum": [
        "ASSET_TYPE_UNKNOWN",
        "ASSET_TYPE_WATER_METER",
        "ASSET_TYPE_ENERGY_METER",
        "ASSET_TYPE_GAS_METER",
        "ASSET_TYPE_GPS_TRACKER",
        "ASSET_TYPE_GATEWAY"
      ],
      "default": "ASSET_TYPE_UNKNOWN",
      "description": " - ASSET_TYPE_UNKNOWN: Unknown asset type.\n - ASSET_TYPE_WATER_METER: AMR Water meter Inductive.\n - ASSET_TYPE_ENERGY_METER: Energy Meter device.\n - ASSET_TYPE_GAS_METER: GAS Meter device.\n - ASSET_TYPE_GPS_TRACKER: GPS Tracker device.\n - ASSET_TYPE_GATEWAY: Gateway device."
    },
